<nav class="navbar navbar-inverse navbar-fixed" id="left-sidebar-wrapper" role="navigation">
    <ul class="nav sidebar-nav">
        <li class="sidebar-brand">
            <h4 style="text-align: center;">Filter By</h4>
        </li>
    </ul>
